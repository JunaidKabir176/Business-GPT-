import express from 'express';
const app = express();

app.use(express.json());

app.post('/v1/execution-risk/recommendation', (req, res) => {
  const { company_name, issue, constraints } = req.body;

  if (!company_name || !issue || !constraints) {
    return res.status(400).json({ error: 'Missing required fields' });
  }

  res.json({
    single_recommendation: `Recommendation: Resolve ${issue} for ${company_name} within ${constraints.timeframe_days} days.`
  });
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});

